<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/secondaryColor"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="@string/main_phrase"
            android:fontFamily="@font/nanumbarunpenbold"
            android:textStyle="bold"
            android:textColor="#fff"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginTop="6dp"
            android:textColor="#FFF"
            android:text="@string/sub_phrase"
            android:fontFamily="@font/nanumbarunpenbold"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:gravity="center">
        
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="#F8DE5A"
            android:fontFamily="@font/nanumbarunpenbold"
            android:textColor="@color/primaryColor"
            android:id="@+id/btnKakao"
            android:text="@string/kakao_login"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:id="@+id/btnNaver"
            android:fontFamily="@font/nanumbarunpenbold"
            android:background="#5DC539"
            android:layout_marginTop="24dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="@string/naver_login"
            android:textSize="22sp"/>

        
    </LinearLayout>

</LinearLayout>
